# -*- mode: shell-script -*-

## require: ENV
## require: prompt-functions
## required-by: PROMPT

function _git_prompt_show()
{
    # Nasty, but __git_ps1 will clobber PS1 !
    local PS1
    # we ain't need no stinking prefixes
    __git_ps1 '' ''
    # just return what __git_ps1 tells us
    echo -e "$PS1"
}

prompt-register-widget git _git_prompt_show
